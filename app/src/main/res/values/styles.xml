<resources>

    <style name="AppTheme.Word" parent="AppTheme">
        <item name="android:textSize">@dimen/text_size_word</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.BorderButton" parent="TextAppearance.AppCompat.Button">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:textSize">@dimen/text_size_button</item>
        <item name="android:background">@drawable/background_button</item>
        <item name="android:layout_height">@dimen/button_default_height</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="AppTheme.Title" parent="AppTheme">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.Subtitle" parent="AppTheme">
        <item name="android:textSize">@dimen/text_size_subtitle</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.Tag" parent="AppTheme">
        <item name="android:textSize">@dimen/text_size_tag</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

</resources>
